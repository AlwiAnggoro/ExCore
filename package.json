{
  "name": "excore",
  "version": "0.1.0",
  "description": "Production-Ready TypeScript Backend Framework built on Clean Architecture and Domain-Driven Design principles",
  "private": true,
  "type": "module",
  "keywords": [
    "typescript",
    "framework",
    "backend",
    "ddd",
    "domain-driven-design",
    "clean-architecture",
    "nodejs",
    "rest-api",
    "graphql",
    "microservices",
    "monorepo",
    "jwt",
    "rbac",
    "observability",
    "opentelemetry"
  ],
  "author": "ExCore Team <noreply@excore.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/VenoMexx/ExCore.git"
  },
  "bugs": {
    "url": "https://github.com/VenoMexx/ExCore/issues"
  },
  "homepage": "https://github.com/VenoMexx/ExCore#readme",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --reporter=basic",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "release": "pnpm build && pnpm changeset:publish"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/core": "^1.9.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.52.1",
    "@opentelemetry/resources": "^1.9.0",
    "@opentelemetry/sdk-trace-base": "^1.9.0",
    "@opentelemetry/sdk-trace-node": "^1.9.0",
    "hono": "^4.5.6"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  }
}
